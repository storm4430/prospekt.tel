<style>
    input, textarea {
        max-width: none;
    }
</style>
<div class="row ">
    <form>
        <div class="col-md-offset-2 col-md-8">
            <div class="form-group has-feedback col-md-12" style="padding-left:1px; padding-right:1px">
                <input class="form-control" type="text" placeholder="Наименование отделения" autofocus id="orgName" required pattern="[  -;&quot;А-Яа-яЁё]{1,}" spellcheck="false" title="Наименование отделения" />
                <span class="glyphicon glyphicon-home form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback col-md-5" style="padding-left:1px; padding-right:1px">
                <input class="form-control" type="number" id="orgINN" placeholder="ИНН" maxlength="13" />
                <span class="glyphicon glyphicon-barcode form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback col-md-7" style="padding-left:1px; padding-right:1px">
                <input type="number" class="form-control" placeholder="ОГРН" id="orgOGRN" required />
                <span class="glyphicon glyphicon-barcode form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback col-md-12" style="padding-left:1px; padding-right:1px">
                <input class="form-control" type="text" placeholder="Фамилия руководителя" id="orgRukFam" required pattern="[  -;&quot;А-Яа-яЁё]{1,}" spellcheck="false" title="Имя должно быть на русском языке" />
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback col-md-12" style="padding-left:1px; padding-right:1px">
                <input class="form-control" type="text" placeholder="Имя руководителя" id="orgRukIm" required pattern="[  -;&quot;А-Яа-яЁё]{1,}" spellcheck="false" title="Имя должно быть на русском языке" />
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback col-md-12" style="padding-left:1px; padding-right:1px">
                <input class="form-control" type="text" placeholder="Отчество руководителя" id="orgRukOt" required pattern="[  -;&quot;А-Яа-яЁё]{1,}" spellcheck="false" title="Отчество должна быть на русском языке" />
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>

            <div class="form-group has-feedback col-md-12" style="padding-left:1px; padding-right:1px">
                <textarea class="form-control" placeholder="Адрес" id="orgAdress" required spellcheck="false" style="resize:none" />
                <span class="glyphicon glyphicon-object-align-bottom form-control-feedback"></span>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <hr />
    <div class="col-xs-8">
        <h5 style="color:red" id="errMsg"></h5>
    </div>
    <div class="col-xs-3">
        <button id="saveOrg" class="btn btn-primary btn-block btn-flat">Сохранить</button>
    </div><!-- /.col -->
</div>
<script>
    $(document).ready(function () {
        $('#saveOrg').click(function () {
            var newObj = {
                orgName : $('#orgName').val(),
                orgINN: $('#orgINN').val(),
                orgOGRN: $('#orgOGRN').val(),
                orgAdress: $('#orgAdress').val(),
                orgRukFam: $('#orgRukFam').val(),
                orgRukIm: $('#orgRukIm').val(),
                orgRukOt: $('#orgRukOt').val(),
            };
            NewObject('/api/orgs', newObj, 5);
        });
    })
</script>
